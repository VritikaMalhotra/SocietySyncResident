<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.societysyncresident">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Features.ViewNotice"></activity>
        <activity android:name=".Features.VehicleLogsResident"></activity>
        <activity android:name=".Features.DailyServiceNotRegistered" />
        <activity android:name=".Features.DailyServiceRegistered" />
        <activity android:name=".Features.Camera" />
        <activity android:name=".Features.CheckMaid" />
        <activity android:name=".Features.AddComplaint" />
        <activity android:name=".Features.AddVehicle" />
        <activity android:name=".CommonClasses.Home" />
        <activity android:name=".CommonClasses.Login" />
        <activity android:name=".CommonClasses.Signup">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>