<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/curved_box"
            android:layout_marginTop="25dp"

            android:padding="12dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewDateVehicleLogsResident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:hint="12/20/2000"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/textViewVehicleNumberVehicleLogsResident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GJ 12 AM 2000"
        android:textSize="22sp"
        android:gravity="right"
        android:layout_marginRight="10dp"/>

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:hint="IN"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="OUT"
                    android:textSize="25sp"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/poppins_bold"/>

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textViewInTimeVehicleLogsResident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:hint="12:34 AM"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/textViewOutTimeVehicleLogsResident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="3:00 PM"
            android:textSize="22sp"
            android:gravity="right"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
        </LinearLayout>

</LinearLayout>

